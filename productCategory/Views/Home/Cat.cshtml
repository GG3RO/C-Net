@model Categorie

<h1 class="text-center">@Model.Name</h1>

<div class="row">
    <div class="col-6">
        <h3>Products</h3>
        @foreach (var item in ViewBag.ExcistingProduct)
        {
            <p>@item.Name</p>
        }
    </div>

    <div class="col-6">
        <h3>Add Products</h3>
        <form asp-action="addProduct" method="post" asp-route-itemid="@Model.CategorieId">
            <div class="form-group">
                <label for="ProductId"> Select Product</label>
                <select name="ProductId">
                    <option value="" selected> Choose a Product</option>
                    @foreach (var item in ViewBag.ProductsToInclude)
                    {
                        <option value="@item.ProductId">@item.Name</option>
                    }
                </select>
            </div>
            <input type="submit" value="add">
        </form>
    </div>
</div>