@model Product
<div class="row">
    <h3 class="text-center">@Model.Name</h3>
    <div class="col-6">
        <h3>Categories</h3>
        @foreach (var item in ViewBag.ExistingCategories)
        {
            <p>@item.Name</p>
        }
    </div>
    <div class="col-6">
        <h3>Add Category</h3>
        <div>
            <form asp-action="addCategory" asp-route-itemid="@Model.ProductId" method="post">
                <div class="form-group">
                    <label for="CategorieId"> Select Categorie</label>
                    <select name="CategorieId">
                        <option value="" selected> Choose a Category</option>
                        @foreach (var item in ViewBag.categoriesToInclude)
                        {
                            <option value="@item.CategorieId">@item.Name</option>
                        }
                    </select>
                </div>
                <input type="submit" value="add">
            </form>
        </div>
    </div>
</div>