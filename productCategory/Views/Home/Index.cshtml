@model Product
<div class="row">
    <div class="col-6">
        <h3>New Product</h3>
        <form asp-action="CreateProduct" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control border-2 mb-1">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control border-2 mb-1">
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control border-2 mb-1">
                    <span asp-validation-for="Price"></span>
                </div>
                <input type="submit" value="Create" class="btn btn-primary">
        </form>
    </div>

    <div class="col-6 ">
        <h3>All Products</h3>
        <div class="d-block h4 mt-3">
            @foreach (var item in ViewBag.Products)
            {
                <a asp-action="Products" asp-route-id="@item.ProductId">@item.Name</a>
            }
        </div>
    </div>
</div>
