@await Html.PartialAsync("_Navbar")

<div class="container">
    <div class="row">
        <div class="col-4">
            <h1 class="quick">Purchase Details</h1>
            <div class="info">
                <h3 class="quick">Order Information</h3>
                <p>Order Date: @Model.OrderDate</p>
                <p>Method: @Model.Method</p>
                <p>Size: @Model.Size</p>
                <p>Crust: @Model.Crust</p>
                <p>Total Price: @Model.TotalPrice $</p>
            </div>
            <div class="buuuu">
                <form asp-action="Order" asp-controller="Home" method="get">
                    <button type="submit" class="btn btn-primary">Start Over</button>
                </form>
                <form asp-action="Purchase" asp-controller="Home" asp-route-orderId="@Model.OrderId" method="get">
                    <button type="submit" class="btn btn-success">Purchase</button>
                </form>
            </div>
    </div>
</div>

