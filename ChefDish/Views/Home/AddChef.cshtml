@model User

<form asp-action="CreateChef" method="post" >
    <div class="container mt-5 w-50">
        <div class="form-group mb-3 ">
            <label asp-for=" Name"  class="form-label">First Name</label>
            <input asp-for="Name" class="form-control border-2 mb-1">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Age"  class="form-label"></label>
            <input asp-for="Age" class="form-control border-2 mb-1">
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Dishes"  class="form-label"># of Dishes</label>
            <input asp-for="Dishes" class="form-control border-2 mb-1">
            <span asp-validation-for="Dishes"></span>
        </div>
        <input type="submit" value="Add Chef" class="btn btn-primary m3">
    </div>
</form>