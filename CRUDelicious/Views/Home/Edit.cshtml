@model Dish

<h1 class="text-center">Edit @Model.Name</h1>

<form asp-action="Update" asp-route-itemid="@Model.DishId" method="post">
    <div class="form-group row justify-content-between mt-3">
        @* Chef's Name | Name of Dish | # of Calories *@
        <div class="form-group col-3">
            <div>
                <label asp-for="Chef" class="mb-1">Chef's Name</label>
                <input asp-for="Chef" class="form-control border-2 mb-1">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Name" class="mb-1">Name of Dish</label>
                <input asp-for="Name" class="form-control  border-2 mb-1">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mt-2">
                <label asp-for="Calories" class="mb-1"># of Calories</label>
                <input asp-for="Calories" class="form-control  border-2 mb-1">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>

        @* Tastiness *@
        <div class="form-group col-3">
            <label asp-for="Tastyness" class="mb-1">Tastiness</label>
            <select class="form-control  border-2 mb-1" asp-for="Tastyness"> 
                <option value="" selected>Rate The Tastiness Of The Dish</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastyness" class="text-danger"></span>
        </div>

        @* Description *@
        <div class="form-group col-3">
            <div>
                <label asp-for="Description" class="mb-1">Description</label>
                <textarea asp-for="Description" class="form-control border-2 mb-1" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <span class="d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-dark border-2 mt-4 shadow-sm btn-pad d-flex align-items-center" value="Edit Dish">
            </span>
        </div>
    </div>
</form>