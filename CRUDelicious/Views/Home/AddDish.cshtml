@model Dish
<h1 class="text-center">Add a New Dish</h1>


<form action="DishValid" method="post">
    <div class="form-group row justify-content-between mt-3 ">
        <div class="col-3 form-group">
            <div>
                <label asp-for="Chef">Chef' s Name</label>
                <input asp-for="Chef" class="form-control border-2 mb-1">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name" class="form-control border-2 mb-1">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" class="form-control border-2 mb-1">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3 form-group">
            <label asp-for="Tastyness" class="mb-1">Tastiness</label>
            <Select asp-for="Tastyness" class="form-control border-2 mb-1 ">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </Select>
            <span asp-validation-for="Tastyness" class="text-danger"></span>
        </div>
        <div class="col-3 form-group">
            <div>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control border-2 mb-1" rows="5"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <span class="d-flex justify-content-end">
                <input type="submit"
                    class="btn btn-outline-dark border-2 mt-4 shadow-sm btn-pad d-flex align-items-center"
                    value="Add Dish">
            </span>
        </div>
    </div>
</form>